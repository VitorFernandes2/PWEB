@using PagedList
@using PagedList.Mvc
@model PagedList<ERecarga.DAL.TimeBreak>

@{
    ViewBag.Title = "Horas";
}

<h2>Intervalos de Tempo</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Begin)*@
            Horas definidas
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                Das @Html.DisplayFor(modelItem => item.Begin)h ás @Html.DisplayFor(modelItem => item.End)h
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.TimeBreakId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.TimeBreakId }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.TimeBreakId })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, pagina => Url.Action("Create", new { pagina }))

