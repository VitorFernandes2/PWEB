@using PagedList;
@using PagedList.Mvc;
@model PagedList<ERecarga.DAL.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Reservas</h2>

<p>
    @if (!User.IsInRole("Admin")){@Html.ActionLink("Criar Nova", "Create")}
    @using (Html.BeginForm("Index", "Reservations", FormMethod.Post))
    {

        <div class="form-inline">
            <label>Filtrar por Nome</label> &nbsp
            <div class="form-group">
                @Html.TextBox("procura", null, new
                {
                    @class = "form-control",
                    @placeholder = "Posto"
                })
            </div>
            <label>Filtrar por intervalo</label> &nbsp
            <div class="form-group">
                @Html.DropDownList("intervalo", new SelectList(ViewBag.TimeBreakList, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
            </div>
            <label>Filtrar por Região</label> &nbsp
            <div class="form-group">
                @Html.DropDownList("regiao", new SelectList(ViewBag.ListRegions, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                &nbsp <button type="submit" class="btn btn-info">Filtrar</button>
            </div>
        </div>

    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FillStationTimeBreakId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FillStationTimeBreak.FillStation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) €
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))

