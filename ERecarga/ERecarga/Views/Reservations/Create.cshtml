@using PagedList;
@using PagedList.Mvc;

@model PagedList<ERecarga.ViewModels.ReservationViewModel>

@{
    ViewBag.Title = "Nova Reserva";
}

<h2>Nova Reserva</h2>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().FillStationTimeBreak.FillStation.Station.Region.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FillStationTimeBreak.FillStation.Station.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FillStationTimeBreak.FillStation.Name)
        </th>
        <th>
            Horário
        </th>
        <th>
            Dia de Reserva
        </th>
        <th>
            Preço
        </th>
        <th>

        </th>
    </tr>



    @foreach (var item in Model.ToList())
    {
        <tr>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <td>
                    @Html.DisplayFor(modelItem => item.FillStationTimeBreak.FillStation.Station.Region.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FillStationTimeBreak.FillStation.Station.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FillStationTimeBreak.FillStation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FillStationTimeBreak.TimeBreak.Begin)
                    Às
                    @Html.DisplayFor(modelItem => item.FillStationTimeBreak.TimeBreak.End)
                    <input type="hidden" name="TimeBreakId" value="@(item.FillStationTimeBreakId)" />
                </td>
                <td>
                    <div class="form-group">
                        <input type="date" name="submitdate" class="form-control" required>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) €
                    <input type="hidden" name="Price" value="@(item.Price)" />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Reservar" class="btn btn-primary" />
                        </div>
                    </div>
                </td>
            }
        </tr>
    }

</table>

@Html.PagedListPager(Model, pagina => Url.Action("Create", new { pagina }))

